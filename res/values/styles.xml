<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="dialog_animation" >
        <item name="android:windowEnterAnimation" >@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation" >@anim/dialog_slide_down</item>
    </style>
    
    <style name="question_animation" >
        <item name="android:windowEnterAnimation" >@anim/question_slide_up</item>
        <item name="android:windowExitAnimation" >@anim/question_slide_down</item>
    </style>
    
    <style name="options_animation" >
        <item name="android:windowEnterAnimation" >@anim/options_slide_up</item>
        <item name="android:windowExitAnimation" >@anim/options_slide_down</item>
    </style>

</resources>
